{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "removeComments": true,
    "outDir": "./server",
    "rootDir": "./src",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "declaration": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "../../node_modules"
  ]
}