{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./server",
    "rootDirs": [
      ".",
      "../.."
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ]
}